{  
  "Version": "2012-10-17",
  "Statement":[{
    "Effect": "Allow",
    "Action": [
     "dynamodb:BatchGetItem",
     "dynamodb:GetItem",
     "dynamodb:Query",
     "dynamodb:Scan",
     "dynamodb:BatchWriteItem",
     "dynamodb:PutItem",
     "dynamodb:DeleteItem",
     "dynamodb:UpdateItem",
     "dynamodb:CreateTable", 
     "dynamodb:DescribeTable", 
     "dynamodb:CreateGlobalTable",
     "dynamodb:UpdateGlobalTable"
    ],
    "Resource": "arn:aws:dynamodb:*:*:*"
   }
  ]
}