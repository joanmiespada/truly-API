    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/api",
            "args": [ "arg1", "arg2" ],
            "cwd": "${workspaceRoot}/target/debug",
            "preLaunchTask": "build",
        }, 
        {
            "name": "Attach to API",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceRoot}/target/debug/api",
        },
        {
            "name": "Debug ALL unit tests in library 'mylib'", // https://gist.github.com/xanathar/c7c83e6d53b72dd4464f695607012629
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=mylib"
                ],
                "filter": {
                    "name": "mylib",
                    "kind": "lib"
                }
            },
            "args": [ ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Schema Definition",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/tableCreations.js",
            "env": {
                "NODE_ENV": "development"
            },
            "args": ["--create"]
        }
    ]
}