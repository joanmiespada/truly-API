{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "server_http development",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/server_http",
            "args": [ "arg1", "arg2" ],
            "cwd": "${workspaceRoot}/target/debug",
            "preLaunchTask": "build_server_http",
            "env": {
                "ENVIRONMENT":"development",
            }
        },
        {
            "name": "server_http prod",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/server_http",
            "args": [ "arg1", "arg2" ],
            "cwd": "${workspaceRoot}/target/debug",
            "preLaunchTask": "build_server_http",
            "env": {
                "ENVIRONMENT":"production",
                "RUST_LOG":"actix_web=debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo API",
            "cargo": {
                "args": [
                    "build",
                    "--bin=server_http",
                    "--package=server_http"
                ],
                "filter": {
                    "name": "server_http",
                    "kind": "bin"
                }
            },
            "args": [
                // "user_arg1",
                // "user_arg2"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "ENVIRONMENT":"development",
            }
        },
         
        {
            "name": "Attach to API",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceRoot}/target/debug/api",
        },
        {
            "name": "Debug ALL unit tests in library 'api'", // https://gist.github.com/xanathar/c7c83e6d53b72dd4464f695607012629
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=api"
                ],
                "filter": {
                    "name": "api",
                    "kind": "lib"
                }
            },
            "args": [ ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Schema Definition",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/tableCreations.js",
            "env": {
                "NODE_ENV": "development"
            },
            "args": ["--create"]
        },
        {
            "name": "debug user admin creation",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/scripts/admin_user.js",
            "env":{
                "NODE_ENV": "development"
            },
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/test/**/*"
            ],
          },
    ]
}