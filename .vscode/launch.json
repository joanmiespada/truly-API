{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "truly_cli",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/truly_cli",
            //"args": [ "--table", "owners", "--create" ],
            "args": [ "--store_secret", "../../truly_cli/res/secrets_development.json", "--create", "--region", "eu-central-1" ],
            //"args": ["--adminuser","...@....","--password",".....", "--create"],
            "cwd": "${workspaceRoot}/target/debug",
            "preLaunchTask": "build",
            "env": {
                "ENVIRONMENT":"development",
            }
        },
        {
            "name": "server_http stage",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/server_http",
            "cwd": "${workspaceRoot}/target/debug",
            "preLaunchTask": "build_server_http",
            "env": {
                "ENVIRONMENT":"stage",
            }
        },
        {
            "name": "server_http prod",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/server_http",
            "args": [ "arg1", "arg2" ],
            "cwd": "${workspaceRoot}/target/debug",
            "preLaunchTask": "build_server_http",
            "env": {
                "ENVIRONMENT":"production",
                "RUST_LOG":"actix_web=debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo API",
            "cargo": {
                "args": [
                    "build",
                    "--bin=server_http",
                    "--package=server_http"
                ],
                "filter": {
                    "name": "server_http",
                    "kind": "bin"
                }
            },
            "args": [
                // "user_arg1",
                // "user_arg2"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "ENVIRONMENT":"development",
            }
        },
         
        {
            "name": "Attach to API",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceRoot}/target/debug/api",
        },
        {
            "name": "Debug ALL unit tests in library 'api'", // https://gist.github.com/xanathar/c7c83e6d53b72dd4464f695607012629
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=api"
                ],
                "filter": {
                    "name": "api",
                    "kind": "lib"
                }
            },
            "args": [ ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "NFT test", // https://gist.github.com/xanathar/c7c83e6d53b72dd4464f695607012629
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=lib_blockchain",
                    "create_contract_and_mint_nft_test_sync",
                    //"--",
                    //"--nocapture"
                ],
                "filter": {
                    "name": "lib_blockchain",
                    "kind": "lib"
                }
            },
            "args": [ "create_contract_and_mint_nft_test_sync"],
            "cwd": "${workspaceFolder}"
        },
        
    ]
}